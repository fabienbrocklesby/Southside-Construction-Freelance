---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Gallery">
  <h1 class="text-4xl font-bold mb-4" data-aos="fade-down">Project Gallery</h1>
  <p class="mb-8" data-aos="fade-down">A selection of our recent work.</p>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4" data-aos="fade-up">
    <img src="https://source.unsplash.com/random/400x300?construction" alt="Project 1" class="w-full h-48 object-cover rounded-lg" />
    <img src="https://source.unsplash.com/random/400x300?builder" alt="Project 2" class="w-full h-48 object-cover rounded-lg" />
    <img src="https://source.unsplash.com/random/400x300?architecture" alt="Project 3" class="w-full h-48 object-cover rounded-lg" />
  </div>
</BaseLayout>
