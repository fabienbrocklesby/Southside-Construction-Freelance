---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Home">
  <section class="relative" data-aos="fade-in">
    <img src="https://source.unsplash.com/featured/1200x600?construction-site" alt="Construction site" class="w-full h-80 object-cover" />
    <div class="absolute inset-0 flex flex-col items-center justify-center bg-black/50 text-center px-4">
      <h1 class="text-5xl font-bold text-white mb-4">Building Excellence in Nelson Tasman</h1>
      <p class="text-xl text-white">Quality construction services across New Zealand's Nelson Tasman area.</p>
    </div>
  </section>
  <section class="py-12 grid gap-8 md:grid-cols-3">
    <div class="text-center" data-aos="fade-up">
      <img src="https://source.unsplash.com/random/400x300?house" alt="Residential" class="w-full rounded-lg mb-4" />
      <h2 class="text-2xl font-bold mb-2">Residential</h2>
      <p>Elegant homes built with precision.</p>
    </div>
    <div class="text-center" data-aos="fade-up" data-aos-delay="100">
      <img src="https://source.unsplash.com/random/400x300?office-building" alt="Commercial" class="w-full rounded-lg mb-4" />
      <h2 class="text-2xl font-bold mb-2">Commercial</h2>
      <p>Durable solutions for businesses.</p>
    </div>
    <div class="text-center" data-aos="fade-up" data-aos-delay="200">
      <img src="https://source.unsplash.com/random/400x300?renovation" alt="Renovations" class="w-full rounded-lg mb-4" />
      <h2 class="text-2xl font-bold mb-2">Renovations</h2>
      <p>Modern upgrades for existing spaces.</p>
    </div>
  </section>
</BaseLayout>
