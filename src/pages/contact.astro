---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Contact">
  <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
  <form method="POST" action="/contact" class="max-w-md space-y-4">
    <input type="text" name="name" placeholder="Name" class="input input-bordered w-full" required />
    <input type="email" name="email" placeholder="Email" class="input input-bordered w-full" required />
    <textarea name="message" placeholder="Message" class="textarea textarea-bordered w-full" required></textarea>
    <button type="submit" class="btn btn-primary w-full">Send</button>
  </form>
</BaseLayout>
